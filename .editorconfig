root = true

# General settings for whole project
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Format specific overrides
[*.js]
indent_style = space
indent_size = 2

[*.css]
[*.scss]
indent_style = space
indent_size = 2

[*.html]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
